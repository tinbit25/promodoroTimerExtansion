{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "description": "A customizable Pomodoro timer with notifications and dark mode.",
  "version": "1.0",
  "permissions": [
    "storage",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_ui": {
  
    "open_in_tab": true
  }
  ,  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*.js", "assets/*.css"],
      "matches": ["<all_urls>"]
    }
  
  ]
}
